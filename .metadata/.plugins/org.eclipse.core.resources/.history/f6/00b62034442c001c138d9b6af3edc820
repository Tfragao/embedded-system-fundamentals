#include <stdio.h>
#include <stdlib.h>
#include<stdint.h>

struct carModel
{
	uint32_t carNumber;
	uint32_t carPrice;
	uint16_t carMaxSpeed;
	float carWeight;
};

int main(void)
{

	struct carModel BMW = {2021, 1500, 220, 1330};
	struct carModel Ford = {4031, 35000,160,1900.96};

	printf("Car details BMW :\nNumber = %d\nPrice= %d\nMaxSpeed = %d\nWeight=%f\n\n", BMW.carNumber, BMW.carPrice, BMW.carMaxSpeed, BMW.carWeight);
	printf("Car details Ford:\nNumber = %d\nPrice= %d\nMaxSpeed = %d\nWeight=%f\n", Ford.carNumber, Ford.carPrice, Ford.carMaxSpeed, Ford.carWeight);


	return EXIT_SUCCESS;
}
