#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>

typedef union
{
	uint16_t shortAddr;
	uint32_t longAddr;
}Address;

int main(void)
{

	Address addr;
	addr.shortAddr = 0xABCD;
	addr.longAddr  = 0xEEEECCCC;


	return EXIT_SUCCESS;
}
